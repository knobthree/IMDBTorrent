{
  "manifest_version": 3,
  "name": "IMDBTorrent",
  "version": "1.0",
  "description": "Adds a nice button to IMDB",
  "host_permissions": ["https://apibay.org/*"],
  "permissions": [
    "activeTab", "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.imdb.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
	  "run_at": "document_idle"
    }
  ],  
  "action": {
    "default_title": "Torrent this IMDB movie"
  }
}
